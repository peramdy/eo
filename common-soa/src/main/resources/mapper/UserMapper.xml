<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.peramdy.mapper.fall.UserMapper">

    <select id="queryUserInfoById" parameterType="java.lang.Integer" resultType="com.peramdy.entity.User">
        SELECT
            s.id AS id,
            s.stuName AS name,
            s.classId AS classId
        FROM
            student s
        WHERE
            s.id = #{id}
    </select>

</mapper>